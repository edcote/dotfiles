set nocompatible

" Plugins
execute pathogen#infect()

" Syntax highlighting
syntax on
filetype plugin indent off

" Whitespace
set shiftwidth=2
set tabstop=2
set expandtab
set noautoindent
set nosmartindent

set list
set listchars=tab:\>\ ,trail:.,extends:>,precedes:<

" Interface
set novisualbell
set ruler
set number
set laststatus=2
set nowrap

colorscheme ron

if has("gui_running")
  set guifont=Terminus\ Medium\ 11
endif

" Search options
set ignorecase
set hlsearch
set incsearch

" Buffer options
noremap <C-d> :bdelete<CR>
noremap <C-n> :bnext<CR>
noremap <C-p> :bprev<CR>

" Save files when window loses focus
autocmd FocusLost * silent! wa
