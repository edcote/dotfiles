gitcleansync() {
  if ! [[ -d .git ]]; then
    echo "ERROR: Not in git root directory" >&2
    return 1
  fi
  git status
  if confirm; then
    git clean -fdx
    git pull --rebase
    git submodule update --init --recursive
    clear
  fi
}
export -f gitcleansync

rmbg() {
  if confirm; then
    local tmp=$(mktemp)
    mv $* ${tmp}
    \rm -rf $*
    \rm -rf ${tmp}
  fi
}
export -f rmbg

