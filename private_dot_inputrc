# Up and down search history (complete whole lines)
"\e[A": history-search-backward
"\e[B": history-search-forward

#  Ctrl + Left, Ctrl + Right to move between words
"\e[C": forward-char
"\e[D": backward-char
"\e[1;5C": forward-word
"\e[1;5D": backward-word

# Turn smart quotes into normal quotes.
"\xE2\x80\x9C": "\""
"\xE2\x80\x9D": "\""
"\xE2\x80\x98": "'"
"\xE2\x80\x99": "'"

# Turn non-breaking space into a normal space.
"\xC2\xA0": " "

# Minus and em-dash into plain dashes.
"\xE2\x80\x93": "-"
"\xE2\x80\x94": "--"

# Ellipsis...
"\xE2\x80\xA6": "..."

